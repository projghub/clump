<%= will_paginate(@leads) %>

<%= form_tag root_path, :method => 'get' do %>
  <p>
  <%= text_field_tag :search, params[:search], {style: "width: 350px"} %>
    <%= submit_tag "Search", :name => nil %>
  </p>
<% end %>

<table>
  <thead>
    <tr>
      <th>Email</th>
      <th>First Name</th>
      <th>Last name</th>
    </tr>
  </thead>
  <tbody>
    <% @leads.each do |lead| %>
      <tr>
        <td><%= lead.email unless lead.email.blank? %></td>
        <td><%= lead.first_name unless lead.first_name.blank? %></td>
        <td><%= lead.last_name unless lead.last_name.blank? %></td>
      </tr>
    <% end %>
  </tbody>
</table>
